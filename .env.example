# =============================================================================
# 🧬 Universal DOE Platform - 환경변수 설정 예시
# =============================================================================
# 이 파일을 복사하여 .env 파일을 생성하고 실제 값을 입력하세요.
# 명령어: cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# 🔧 애플리케이션 기본 설정
# -----------------------------------------------------------------------------
# 실행 환경: development, staging, production
APP_ENV=development

# 앱 이름 및 버전 (변경하지 마세요)
APP_NAME="Universal DOE Platform"
APP_VERSION="2.0.0"

# Streamlit 설정
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# -----------------------------------------------------------------------------
# 💾 데이터 저장 설정
# -----------------------------------------------------------------------------
# SQLite 데이터베이스 경로 (기본값 사용 권장)
DATABASE_PATH="./data/db/app.db"

# 백업 설정
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600  # 1시간 (초 단위)
MAX_BACKUPS=5

# 캐시 설정
CACHE_ENABLED=true
CACHE_MAX_SIZE_MB=500
CACHE_TTL_DAYS=30

# -----------------------------------------------------------------------------
# 🤖 AI API 설정 (필수: Google Gemini, 선택: 나머지)
# -----------------------------------------------------------------------------
# Google Gemini 2.0 Flash (필수) - 무료
# 발급: https://makersuite.google.com/app/apikey
GOOGLE_GEMINI_API_KEY="YOUR_GEMINI_API_KEY_HERE"

# xAI Grok 3 Mini (선택) - 유료
# 발급: https://x.ai/api
XAI_GROK_API_KEY=""
XAI_GROK_BASE_URL="https://api.x.ai/v1"

# Groq (선택) - 무료 티어 제공
# 발급: https://console.groq.com
# 무료: 100 requests/min
GROQ_API_KEY=""
GROQ_BASE_URL="https://api.groq.com/openai/v1"

# DeepSeek (선택) - 코드/수식 특화
# 발급: https://platform.deepseek.com
DEEPSEEK_API_KEY=""
DEEPSEEK_BASE_URL="https://api.deepseek.com/v1"

# SambaNova (선택) - 무료 클라우드
# 발급: https://cloud.sambanova.ai
# 무료: 대규모 모델 사용 가능
SAMBANOVA_API_KEY=""
SAMBANOVA_BASE_URL="https://api.sambanova.ai/v1"

# HuggingFace (선택) - 무료 추론 API
# 발급: https://huggingface.co/settings/tokens
# 무료: 특수 모델 접근 가능
HUGGINGFACE_TOKEN=""

# -----------------------------------------------------------------------------
# 📊 Google Sheets 연동 (필수)
# -----------------------------------------------------------------------------
# Google Sheets URL
# 형식: https://docs.google.com/spreadsheets/d/SHEET_ID/edit
GOOGLE_SHEETS_URL="https://docs.google.com/spreadsheets/d/YOUR_SHEET_ID/edit"

# Google 인증 방법 선택: oauth 또는 service_account
GOOGLE_AUTH_METHOD="oauth"

# 서비스 계정 사용 시 (선택사항)
# JSON 파일 경로 또는 Base64 인코딩된 JSON
GOOGLE_SERVICE_ACCOUNT_JSON=""

# OAuth 클라이언트 ID (선택사항)
GOOGLE_OAUTH_CLIENT_ID=""
GOOGLE_OAUTH_CLIENT_SECRET=""

# -----------------------------------------------------------------------------
# 🔐 보안 설정
# -----------------------------------------------------------------------------
# 세션 암호화 키 (자동 생성 권장)
# 생성 방법: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET_KEY="7BqR#pZ!mK9wV$sE&uJ2vG@hL5dC*xN8"

# JWT 토큰 설정
JWT_SECRET_KEY="YOUR_JWT_SECRET_KEY_HERE"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_HOURS=24

# 비밀번호 해싱
PASSWORD_SALT_ROUNDS=12

# -----------------------------------------------------------------------------
# 🌐 오프라인 모드 설정
# -----------------------------------------------------------------------------
# 기본 오프라인 모드 (true 권장)
OFFLINE_MODE_DEFAULT=true

# 온라인 체크 간격 (초)
ONLINE_CHECK_INTERVAL=30

# 자동 동기화
AUTO_SYNC_ENABLED=true
SYNC_INTERVAL=300  # 5분

# -----------------------------------------------------------------------------
# 🔔 알림 설정
# -----------------------------------------------------------------------------
# 이메일 알림 (향후 구현)
EMAIL_NOTIFICATIONS_ENABLED=false
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM=""

# -----------------------------------------------------------------------------
# 📈 모니터링 및 로깅
# -----------------------------------------------------------------------------
# 로그 레벨: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 로그 파일 설정
LOG_FILE_ENABLED=true
LOG_FILE_PATH="./data/logs/app.log"
LOG_FILE_MAX_SIZE_MB=10
LOG_FILE_MAX_FILES=5

# 성능 모니터링
PERFORMANCE_MONITORING_ENABLED=false
PROFILING_ENABLED=false

# -----------------------------------------------------------------------------
# 🧪 개발자 설정
# -----------------------------------------------------------------------------
# 디버그 모드
DEBUG_MODE=false

# 개발 도구
DEV_TOOLS_ENABLED=false
HOT_RELOAD=true

# 테스트 데이터
USE_TEST_DATA=false
GENERATE_DUMMY_DATA=false

# -----------------------------------------------------------------------------
# 🌍 지역화 설정
# -----------------------------------------------------------------------------
# 기본 언어
DEFAULT_LANGUAGE="ko"

# 지원 언어
SUPPORTED_LANGUAGES="ko,en"

# 시간대
TIMEZONE="Asia/Seoul"

# -----------------------------------------------------------------------------
# 📦 빌드 설정 (데스크톱 앱)
# -----------------------------------------------------------------------------
# 자동 업데이트
AUTO_UPDATE_ENABLED=true
UPDATE_CHECK_INTERVAL=86400  # 24시간

# 업데이트 서버
UPDATE_SERVER_URL="https://api.universaldoe.com/updates"

# 원격 측정 (분석)
TELEMETRY_ENABLED=false

# -----------------------------------------------------------------------------
# 🔌 외부 서비스 통합 (선택사항)
# -----------------------------------------------------------------------------
# GitHub 통합
GITHUB_TOKEN=""
GITHUB_REPO=""

# Slack 통합
SLACK_WEBHOOK_URL=""

# Discord 통합
DISCORD_WEBHOOK_URL=""

# -----------------------------------------------------------------------------
# 💡 사용 가이드
# -----------------------------------------------------------------------------
# 1. 이 파일을 .env로 복사: cp .env.example .env
# 2. 필수 항목 입력:
#    - GOOGLE_GEMINI_API_KEY (무료 발급 가능)
#    - GOOGLE_SHEETS_URL (새 시트 생성 필요)
#    - SESSION_SECRET_KEY (보안을 위해 새로 생성)
# 3. 선택 항목은 필요에 따라 입력
# 4. .env 파일은 절대 Git에 커밋하지 마세요!
# -----------------------------------------------------------------------------

# 무료 API 발급 가이드:
# - Google Gemini: https://makersuite.google.com/app/apikey (무료)
# - Groq: https://console.groq.com (무료 티어 100 req/min)
# - SambaNova: https://cloud.sambanova.ai (무료 클라우드)
# - HuggingFace: https://huggingface.co/settings/tokens (무료)
